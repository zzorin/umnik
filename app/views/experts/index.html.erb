<%= render partial: '/layouts/left_menu' %>
<div class='col-xs-9'>
  <h1>Эксперты</h1>

  <table>
    <tr>
      <th>Имя</th>
      <th colspan="2"></th>
    </tr>

    <% @experts.each do |expert| %>
      <tr>
        <td><%= expert.surname %></td>
        <td><%= link_to 'Изменить', edit_contest_expert_path(expert.contest.id, expert) %></td>
        <td><%= link_to 'Удалить', contest_expert_path(expert.contest, expert),
          method: :delete,
          data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </table>

  <%= link_to 'Добавить критерий',
    new_contest_expert_path,
    class: 'btn btn-blue'%>
</div>
